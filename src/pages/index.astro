---
import BaseLayout from '@layouts/BaseLayout.astro';
import ArticleCard from '@components/ArticleCard.astro';
import HeroSlider from '@components/HeroSlider.astro';
import { getCollection } from 'astro:content';
import { slugify } from '@utils/helpers';
import { categoryMeta } from '@data/categories';

const allPosts = (await getCollection('blog', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const categoryOrder = [
  'Linux',
  'Software',
  'Redes',
  'Seguridad',
  'Virtualización',
  'Monitorización',
  'Automatización',
  'Self-Hosting',
  'Hardware',
  'Opinión',
];

const categoryMap = new Map<string, typeof allPosts>();
for (const post of allPosts) {
  const cat = post.data.category;
  if (!categoryMap.has(cat)) categoryMap.set(cat, []);
  categoryMap.get(cat)!.push(post);
}

const sortedCategories = [...categoryMap.entries()].sort((a, b) => {
  const ia = categoryOrder.indexOf(a[0]);
  const ib = categoryOrder.indexOf(b[0]);
  return (ia === -1 ? 999 : ia) - (ib === -1 ? 999 : ib);
});
---

<BaseLayout isHome={true}>
  <h1 class="sr-only">Blog técnico en español para administradores de sistemas</h1>
  <HeroSlider posts={allPosts.slice(0, 5)} />
  {
    sortedCategories.map(([category, posts]) => (
      <section class="category-section container">
        <div class="category-header">
          <h2>
            <span class="category-icon" set:html={categoryMeta[category]?.icon || ''} />
            {category}
          </h2>
          <a
            class="cat-link"
            href={`/categorias/${slugify(category)}`}
            aria-label={`Ver todos los artículos de ${category}`}
          >
            [ver todos →]
          </a>
        </div>
        <div class="category-grid">
          <div class="featured">
            <ArticleCard post={posts[0]} />
          </div>
          {posts.length > 1 && (
            <div class="secondary">
              {posts.slice(1, 4).map((post) => (
                <ArticleCard post={post} />
              ))}
            </div>
          )}
        </div>
      </section>
    ))
  }
</BaseLayout>

<style>
  .category-section {
    padding: 2.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .category-section:last-child {
    border-bottom: none;
  }

  .category-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .category-header h2 {
    margin: 0;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .category-icon {
    display: inline-flex;
    color: var(--color-primary);
  }

  .category-icon :global(svg) {
    width: 1.5rem;
    height: 1.5rem;
  }

  .cat-link {
    font-size: 0.8125rem;
    font-family: var(--font-mono);
    text-decoration: none;
    color: var(--color-text-secondary);
    white-space: nowrap;
    transition: color 0.15s ease;
  }

  .cat-link:hover {
    color: var(--color-primary);
  }

  .category-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    align-items: start;
  }

  .featured :global(.article-card) {
    flex-direction: column;
  }

  .featured :global(.card-image-link) {
    flex: none;
    aspect-ratio: 16/9;
    min-height: auto;
  }

  .secondary {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .secondary :global(.article-card) {
    flex-direction: row;
    align-items: stretch;
  }

  .secondary :global(.card-image-link) {
    flex: 0 0 140px;
    min-height: auto;
    max-height: none;
  }

  .secondary :global(.card-title) {
    font-size: 0.9375rem;
  }

  .secondary :global(.card-description) {
    display: none;
  }

  .secondary :global(.card-tags) {
    gap: 0.25rem;
  }

  .secondary :global(.card-tags .badge-tag) {
    font-size: 0.6875rem;
    padding: 0.1rem 0.4rem;
  }

  .secondary :global(.badge-category) {
    display: none;
  }

  .secondary :global(.card-content) {
    padding: 0.75rem 1rem;
    gap: 0.5rem;
  }

  .secondary :global(.card-meta) {
    padding-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .category-grid {
      grid-template-columns: 1fr;
    }

    .featured :global(.article-card) {
      flex-direction: column;
    }

    .secondary :global(.card-image-link) {
      flex: 0 0 120px;
      aspect-ratio: 16/9;
      min-height: auto;
    }
  }
</style>
