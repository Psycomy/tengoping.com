---
import BaseLayout from '@layouts/BaseLayout.astro';
import ArticleCard from '@components/ArticleCard.astro';
import { getCollection } from 'astro:content';
import { slugify } from '@utils/helpers';

const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const categoryMap = new Map<string, typeof allPosts>();
for (const post of allPosts) {
  const cat = post.data.category;
  if (!categoryMap.has(cat)) categoryMap.set(cat, []);
  categoryMap.get(cat)!.push(post);
}

const categoryIcons: Record<string, string> = {
  Linux: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="4 17 10 11 4 5"/><line x1="12" y1="19" x2="20" y2="19"/></svg>`,
  Automatización: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 1 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 1 1-2.83-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 1 1 2.83-2.83l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 1 1 2.83 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>`,
  Opinión: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>`,
  Redes: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="6" height="6" rx="0"/><rect x="16" y="2" width="6" height="6" rx="0"/><rect x="9" y="16" width="6" height="6" rx="0"/><line x1="5" y1="8" x2="5" y2="13"/><line x1="19" y1="8" x2="19" y2="13"/><line x1="5" y1="13" x2="19" y2="13"/><line x1="12" y1="13" x2="12" y2="16"/></svg>`,
};
---

<BaseLayout isHome={true}>
  {[...categoryMap.entries()].map(([category, posts]) => (
    <section class="category-section container">
      <div class="category-header">
        <h2>
          <span class="category-icon" set:html={categoryIcons[category] || ''} />
          {category}
        </h2>
        <a href={`/categorias/${slugify(category)}`}>Ver todos →</a>
      </div>
      <div class="category-grid">
        <div class="featured">
          <ArticleCard post={posts[0]} />
        </div>
        {posts.length > 1 && (
          <div class="secondary">
            {posts.slice(1, 4).map((post) => (
              <ArticleCard post={post} />
            ))}
          </div>
        )}
      </div>
    </section>
  ))}
</BaseLayout>

<style>
  .category-section {
    padding: 2.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .category-section:last-child {
    border-bottom: none;
  }

  .category-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .category-header h2 {
    margin: 0;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .category-icon {
    display: inline-flex;
    color: var(--color-primary);
  }

  .category-icon :global(svg) {
    width: 1.5rem;
    height: 1.5rem;
  }

  .category-header a {
    font-weight: 600;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .category-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    align-items: start;
  }

  .featured :global(.article-card) {
    flex-direction: column;
  }

  .featured :global(.card-image-link) {
    flex: none;
    aspect-ratio: 16/9;
    min-height: auto;
  }

  .secondary {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .secondary :global(.article-card) {
    flex-direction: row;
    align-items: stretch;
  }

  .secondary :global(.card-image-link) {
    flex: 0 0 140px;
    min-height: auto;
    max-height: none;
  }

  .secondary :global(.card-title) {
    font-size: 0.9375rem;
  }

  .secondary :global(.card-description) {
    display: none;
  }

  .secondary :global(.card-tags) {
    gap: 0.25rem;
  }

  .secondary :global(.card-tags .badge-tag) {
    font-size: 0.6875rem;
    padding: 0.1rem 0.4rem;
  }


  .secondary :global(.badge-category) {
    display: none;
  }

  .secondary :global(.card-content) {
    padding: 0.75rem 1rem;
    gap: 0.5rem;
  }

  .secondary :global(.card-meta) {
    padding-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .category-grid {
      grid-template-columns: 1fr;
    }

    .featured :global(.article-card) {
      flex-direction: column;
    }

    .secondary :global(.card-image-link) {
      flex: 0 0 120px;
      aspect-ratio: 16/9;
      min-height: auto;
    }
  }
</style>
