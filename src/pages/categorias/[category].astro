---
import type { GetStaticPaths } from 'astro';
import BaseLayout from '@layouts/BaseLayout.astro';
import ArticleCard from '@components/ArticleCard.astro';
import { getCollection } from 'astro:content';
import { slugify } from '@utils/helpers';
import { categoryMeta } from '@data/categories';

export const getStaticPaths = (async () => {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  const allCategories = new Set([
    ...Object.keys(categoryMeta),
    ...posts.map((p) => p.data.category),
  ]);

  return [...allCategories].map((category) => ({
    params: { category: slugify(category) },
    props: {
      category,
      posts: posts
        .filter((p) => p.data.category === category)
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
    },
  }));
}) satisfies GetStaticPaths;

const { category, posts } = Astro.props;
const meta = categoryMeta[category];
---

<BaseLayout title={`Categoría: ${category}`} description={meta?.description ?? `Artículos sobre ${category}`}>
  <section class="container page-section">
    <div class="category-heading">
      {meta?.icon && <span class="category-icon" set:html={meta.icon} />}
      <h1>{category}</h1>
    </div>
    {meta?.description && <p class="category-desc">{meta.description}</p>}
    <p class="subtitle">{posts.length} {posts.length === 1 ? 'artículo' : 'artículos'}</p>
    <div class="posts-grid">
      {posts.map((post) => <ArticleCard post={post} />)}
    </div>
  </section>
</BaseLayout>

<style>
  .page-section { padding: 3rem 0 4rem; }

  .category-heading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    margin-bottom: 0.5rem;
  }

  .category-icon {
    display: flex;
    color: var(--color-primary);
  }

  .category-icon :global(svg) {
    width: 28px;
    height: 28px;
  }

  .category-heading h1 {
    margin: 0;
  }

  .category-desc {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 1.05rem;
    margin: 0 auto 0.25rem;
    max-width: 500px;
  }

  .subtitle {
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 2.5rem;
  }

  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
</style>
