---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import BaseLayout from './BaseLayout.astro';
import TableOfContents from '@components/TableOfContents.astro';
import AuthorCard from '@components/AuthorCard.astro';
import ArticleNav from '@components/ArticleNav.astro';
import GiscusComments from '@components/GiscusComments.astro';
import CopyCodeButton from '@components/CopyCodeButton.astro';
import HeadingAnchors from '@components/HeadingAnchors.astro';
import Breadcrumbs from '@components/Breadcrumbs.astro';
import ReadingProgress from '@components/ReadingProgress.astro';
import RelatedArticles from '@components/RelatedArticles.astro';
import ShareButtons from '@components/ShareButtons.astro';
import { getReadingTime } from '@utils/readingTime';
import { formatDate, slugify } from '@utils/helpers';
import authors from '@data/authors.json';

interface Props {
  entry: {
    id: string;
    body?: string;
    data: {
      title: string;
      description: string;
      author: string;
      pubDate: Date;
      category: string;
      tags: string[];
      image?: ImageMetadata;
      updatedDate?: Date;
    };
  };
  headings: { depth: number; slug: string; text: string }[];
  prevPost?: { id: string; data: { title: string } } | null;
  nextPost?: { id: string; data: { title: string } } | null;
}

const { entry, headings, prevPost, nextPost } = Astro.props;
const {
  title,
  description,
  author: authorId,
  pubDate,
  updatedDate,
  category,
  tags,
  image,
} = entry.data;

const authorData = authors.find((a) => a.id === authorId);
const readingTime = getReadingTime(entry.body || '');
const ogImage = `/og/${entry.id}.png`;
const canonicalURL = new URL(`/blog/${entry.id}`, Astro.site).toString();
const authorPageUrl = authorData
  ? new URL(`/autor/${authorData.id}`, Astro.site).toString()
  : undefined;

const authorSocial = authorData?.social as
  | { github?: string; twitter?: string; linkedin?: string }
  | undefined;
const authorSameAs = authorSocial
  ? [authorSocial.github, authorSocial.twitter, authorSocial.linkedin].filter((v): v is string =>
      Boolean(v)
    )
  : [];

const authorJsonLd = authorData
  ? {
      '@context': 'https://schema.org',
      '@type': 'Person',
      '@id': new URL(`/autor/${authorData.id}`, Astro.site).toString(),
      name: authorData.name,
      url: new URL(`/autor/${authorData.id}`, Astro.site).toString(),
      ...(authorSameAs.length > 0 && { sameAs: authorSameAs }),
      ...(authorData.bioShort && { description: authorData.bioShort }),
    }
  : null;
---

<BaseLayout
  title={title}
  description={description}
  image={ogImage}
  article={true}
  publishDate={pubDate.toISOString()}
  modifiedDate={updatedDate?.toISOString()}
  author={authorData?.name}
  authorUrl={authorPageUrl}
>
  {authorJsonLd && <script type="application/ld+json" set:html={JSON.stringify(authorJsonLd)} />}

  <article class="article-page container" data-pagefind-body>
    <Breadcrumbs title={title} category={category} />
    <header class="article-header">
      <div class="article-meta">
        <span class="meta-prompt">$ cat {entry.id}.md</span>
        <a href={`/categorias/${slugify(category)}`} class="badge badge-category">{category}</a>
        <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
        {updatedDate && <span class="updated-date">(actualizado: {formatDate(updatedDate)})</span>}
        <span class="reading-time">{readingTime} min de lectura</span>
      </div>
      <h1>{title}</h1>
      <p class="article-description">{description}</p>
    </header>

    {
      image && (
        <div class="article-image">
          <Image src={image} alt={title} width={900} height={506} format="webp" loading="eager" />
        </div>
      )
    }

    <div class="article-grid">
      <aside class="article-sidebar" data-pagefind-ignore>
        <TableOfContents headings={headings} />
      </aside>

      <div class="article-content prose">
        <slot />
      </div>
    </div>

    <footer class="article-footer" data-pagefind-ignore>
      <div class="article-tags">
        {
          tags.map((tag) => (
            <a href={`/etiquetas/${slugify(tag)}`} class="badge badge-tag">
              {tag}
            </a>
          ))
        }
      </div>

      <ShareButtons title={title} url={canonicalURL} />

      <div class="rss-cta">
        <span class="rss-prompt">$ curl tengoping.com/rss.xml | subscribe</span>
        <a href="/rss.xml" class="rss-link" aria-label="Suscribirse al feed RSS"
          >[suscribirse por RSS â†’]</a
        >
      </div>

      {authorData && <AuthorCard author={authorData} />}

      <RelatedArticles currentId={entry.id} currentTags={tags} currentCategory={category} />

      <ArticleNav prevPost={prevPost} nextPost={nextPost} />

      <GiscusComments />
    </footer>
  </article>

  <CopyCodeButton />
  <HeadingAnchors />
  <ReadingProgress />
</BaseLayout>

<style>
  .article-page {
    padding-top: 2rem;
    padding-bottom: 4rem;
  }

  .article-header {
    max-width: 800px;
    margin: 0 auto 2rem;
    text-align: center;
  }

  .article-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    flex-wrap: wrap;
  }

  .meta-prompt {
    color: var(--color-primary);
    font-size: 0.8125rem;
    width: 100%;
  }

  .updated-date {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
  }

  .reading-time::before {
    content: '|';
    margin-right: 1rem;
  }

  .article-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .article-description {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    max-width: 650px;
    margin: 0 auto;
  }

  .article-image {
    max-width: 900px;
    margin: 0 auto 2rem;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  .article-image img {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .article-grid {
    display: grid;
    grid-template-columns: 1fr minmax(0, 750px) 250px;
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
    align-items: start;
  }

  .article-content {
    grid-column: 2;
    grid-row: 1;
    min-width: 0;
  }

  .article-sidebar {
    grid-column: 3;
    grid-row: 1;
    position: sticky;
    top: calc(var(--header-height) + 2rem);
  }

  .article-footer {
    max-width: 750px;
    margin: 3rem auto 0;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .rss-cta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.75rem;
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 2rem;
  }

  .rss-prompt {
    font-size: 0.8125rem;
    color: var(--color-primary);
  }

  .rss-link {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .rss-link:hover {
    color: var(--color-primary);
  }

  @media (max-width: 1024px) {
    .article-grid {
      grid-template-columns: 1fr;
    }

    .article-content {
      grid-column: 1;
      grid-row: auto;
    }

    .article-sidebar {
      grid-column: 1;
      grid-row: auto;
      order: -1;
      position: static;
    }
  }

  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 1.75rem;
    }

    .article-description {
      font-size: 1.05rem;
    }
  }
</style>
